<script>
  $( function() {
    $( "#upload_picture_scheduled_date" ).datepicker({
    	dateFormat: "yy-mm-dd"
    });
  } );
</script>
<%= form_for(@upload_picture,:html => { :multipart => true }) do |f| %>
	<% message = 'Picture should be in jpg / png / gif format' %>
	<% error_message = '' %>
  <% @upload_picture.errors.full_messages.each do |msg|
  	error_message += "#{msg}<br />"
  end %>
  <div class="container">
    <div class="upload-pic min-height">
      <div class="upload-title"><span></span>Picture Preview</div>
      <div class="message-span"><span><%=raw error_message.blank? ? message : error_message %></span></div>
    </div>
		<div class="upload-files">
			File&nbsp;&nbsp;<%= f.file_field :image, :size => 35 %>
			<br />
			Date: <%= f.text_field :scheduled_date, :readonly => 'readonly' %>&nbsp;&nbsp;
			Description: <%= f.text_field :description %>
			<br />
			<%= f.submit 'Upload' %> |
			<%= link_to 'Back', upload_pictures_path %>
    </div>
  </div>
<% end %>
