<p id="notice"><%= notice %></p>
<%= link_to 'New Upload picture', new_upload_picture_path %>
<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Start Date</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @upload_pictures.each do |upload_picture| %>
      <tr>
        <td><div style="text-align: center;" class='list-pic'><img src='<%= "/system/images/#{upload_picture.image_file_name}"%>' /></div></td>
        <td><%= upload_picture.start_date %></td>
        <td><%= upload_picture.description %></td>
        <td>
          <%= link_to 'Show', upload_picture %> | 
          <%= link_to 'Edit', edit_upload_picture_path(upload_picture) %> | 
          <%= link_to 'Destroy', upload_picture, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
